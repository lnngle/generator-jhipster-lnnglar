<template>
  <Dialog :title="dialogTitle" v-model="dialogVisible">
    <el-form
      ref="formRef"
      :model="formData"
      :rules="formRules"
      label-width="100px"
      v-loading="formLoading"
    >
<% fields.forEach(function(field, index) { %>
      <el-form-item label="<%= field.comment || field.name %>" prop="<%= field.name %>">
<% if (field.type === 'String' && field.options) { %>
        <el-select v-model="formData.<%= field.name %>" placeholder="请选择<%= field.comment || field.name %>">
          <el-option
            v-for="dict in getStrDictOptions(DICT_TYPE.<%= field.dictType || field.name.toUpperCase() %>)"
            :key="dict.value"
            :label="dict.label"
            :value="dict.value"
          />
        </el-select>
<% } else if (field.type === 'Integer' && field.options) { %>
        <el-select v-model="formData.<%= field.name %>" placeholder="请选择<%= field.comment || field.name %>">
          <el-option
            v-for="dict in getIntDictOptions(DICT_TYPE.<%= field.dictType || field.name.toUpperCase() %>)"
            :key="dict.value"
            :label="dict.label"
            :value="dict.value"
          />
        </el-select>
<% } else if (field.type === 'Boolean') { %>
        <el-radio-group v-model="formData.<%= field.name %>">
          <el-radio :label="true">是</el-radio>
          <el-radio :label="false">否</el-radio>
        </el-radio-group>
<% } else if (field.type === 'LocalDate') { %>
        <el-date-picker
          v-model="formData.<%= field.name %>"
          type="date"
          value-format="x"
          placeholder="选择<%= field.comment || field.name %>"
        />
<% } else if (field.type === 'LocalDateTime') { %>
        <el-date-picker
          v-model="formData.<%= field.name %>"
          type="datetime"
          value-format="x"
          placeholder="选择<%= field.comment || field.name %>"
        />
<% } else if (field.type === 'String' && field.textarea) { %>
        <el-input
          v-model="formData.<%= field.name %>"
          type="textarea"
          rows="3"
          placeholder="请输入<%= field.comment || field.name %>"
        />
<% } else { %>
        <el-input v-model="formData.<%= field.name %>" placeholder="请输入<%= field.comment || field.name %>" />
<% } %>
      </el-form-item>
<% }); %>
    </el-form>
    <template #footer>
      <el-button @click="submitForm" type="primary" :disabled="formLoading">确 定</el-button>
      <el-button @click="dialogVisible = false">取 消</el-button>
    </template>
  </Dialog>
</template>
<script setup lang="ts">
import { DICT_TYPE } from '@/utils/dict'
import * as <%= entityClass %>Api from '@/api/system/<%= entityInstance %>'

defineOptions({ name: '<%= entityClass %>Form' })

const { t } = useI18n() // 国际化
const message = useMessage() // 消息弹窗

const dialogVisible = ref(false) // 弹窗的是否展示
const dialogTitle = ref('') // 弹窗的标题
const formLoading = ref(false) // 表单的加载中：1）修改时的数据加载；2）提交的按钮禁用
const formType = ref('') // 表单的类型：create - 新增；update - 修改
const formData = ref({
<% fields.forEach(function(field) { %>
  <%= field.name %>: undefined,<% }); %>
})
const formRules = reactive({
<% fields.forEach(function(field) { %><% if (field.required) { %>
  <%= field.name %>: [{ required: true, message: '<%= field.comment || field.name %>不能为空', trigger: 'blur' }],<% } %><% }); %>
})
const formRef = ref() // 表单 Ref

/** 打开弹窗 */
const open = async (type: string, id?: number) => {
  dialogVisible.value = true
  dialogTitle.value = type === 'create' ? '添加<%= entityClass %>' : '修改<%= entityClass %>'
  formType.value = type
  resetForm()
  // 修改时，设置数据
  if (id) {
    formLoading.value = true
    try {
      formData.value = await <%= entityClass %>Api.get<%= entityClass %>(id)
    } finally {
      formLoading.value = false
    }
  }
}
defineExpose({ open }) // expose

/** 提交表单 */
const emit = defineEmits(['success']) // 定义 success 事件，用于操作成功后的回调
const submitForm = async () => {
  // 校验表单
  await formRef.value.validate()
  // 提交请求
  formLoading.value = true
  try {
    const data = formData.value as unknown
    if (formType.value === 'create') {
      await <%= entityClass %>Api.create<%= entityClass %>(data)
      message.success(t('common.createSuccess'))
    } else {
      await <%= entityClass %>Api.update<%= entityClass %>(data)
      message.success(t('common.updateSuccess'))
    }
    dialogVisible.value = false
    // 发送操作成功的事件
    emit('success')
  } finally {
    formLoading.value = false
  }
}

/** 重置表单 */
const resetForm = () => {
  formData.value = {
<% fields.forEach(function(field) { %>
    <%= field.name %>: undefined,<% }); %>
  }
  formRef.value?.resetFields()
}
</script>